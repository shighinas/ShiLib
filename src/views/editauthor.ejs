		<link href="/css/bootstrap.min.css" rel="stylesheet">
		
    <link href="/css/styles.css" rel="stylesheet">
	</head>
	<body>
<header class="navbar navbar-bright navbar-fixed-top" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- <a href="/" class="navbar-brand">Home</a> -->
    </div>
    <nav class="collapse navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        <% for(i in nav){ %> 
            <li>
            <a href="<%=nav[i].link%>"><%=nav[i].name %> </a>
            </li>
        <% } %> 
      </ul>
      
    </nav>
  </div>
</header>

<div id="masthead">  
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1>Edit Author Details
          <p class="lead"></p>
        </h1>
      </div>
      <div class="col-md-5">
        <div class="well well-lg"> 
          <div class="row">
            <div class="col-sm-12 text-center">
              <a href="" class="shilib">ShiLib <i class="fas fa-book-reader"></i></a>
			
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div><!-- /cont -->
  
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="top-spacer"> </div>
      </div>
    </div> 
  </div><!-- /cont -->
  
</div>


<div class="container">
  <div class="row">
    
    <div class="col-md-12"> 
      
      <div class="panel">
        <div class="panel-body">
          <form method="POST" action="/admin/edauthor/<%=author._id %> " enctype="multipart/form-data" class="form-signin">
            <label for="title">Full Name</label>
            <input type="text" name="name" class="form-control" value="<%=author.name %>"><br>
            <!-- <label for="author">Date of Birth</label>
            <input type="text" name="dob" class="form-control" value="<%=author.dob %>"><br> -->
            <label for="genre">Famous Work</label>
            <input type="text" name="work" class="form-control" value="<%=author.work %> "><br>
            <label for="awards">Awards (if any)</label>
            <input type="text" name="awards" class="form-control" value="<%=author.awards %> "><br>
            <label for="pic">Photo</label>
            <input type="file" name="pic" class="form-control" id="pic" accept="image/*"><br>
            <label for="review">Small Description</label><br>
            <textarea name="des" cols="30" rows="3" class="form-control"><%=author.description %> </textarea><br><br>
            <button class="form-control btn btn-success">Edit</button><br><br>
            <a href="/admin/authors"><button type="button" class="form-control btn btn-danger">Cancel</button></a> <br>
          </form>
          
          <hr>
        </div>
      </div>
                                                                                       
	                                                
                                                      
   	</div><!--/col-12-->
  </div>
</div>
                                                
                                                                                
<hr>


<hr>

